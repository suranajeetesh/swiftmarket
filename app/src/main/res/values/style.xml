<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="txtRatingValue">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="fragmentClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="btn_add_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:text">@string/buy_now</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:background">@drawable/btn_bg_buynow</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/custom_rating_bar</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">47dp</item>
    </style>

    <style name="loaderUI">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="aboutUsTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="aboutUs" parent="aboutUsTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>